{
  "name": "aportela/homedocs",
  "description": "mini (selfhosted) personal document manager",
  "license": "GPL",
  "authors": [
    {
      "name": "alex",
      "email": "766f6964+github@gmail.com"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=8.2",
    "aportela/db-wrapper": "^1.0",
    "firebase/php-jwt": "^6.5",
    "monolog/monolog": "^3.3",
    "php-di/php-di": "^7.0",
    "ramsey/uuid": "^4.7",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.11",
    "slim/twig-view": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1"
  },
  "autoload": {
    "psr-4": {
      "HomeDocs\\": "src-backend\\homedocs"
    }
  },
  "scripts": {
    "start": "php -S 127.0.0.1:8081 -t public_old public_old/index.php"
  },
  "config": {
    "process-timeout": 0
  }
}
