{
  "name": "aportela/homedocs",
  "description": "mini (selfhosted) personal document manager",
  "license": "GPL",
  "authors": [
    {
      "name": "alex",
      "email": "766f6964+github@gmail.com"
    }
  ],
  "config": {
    "sort-packages": true,
    "process-timeout": 0
  },
  "require": {
    "php": ">=8.2",
    "aportela/db-wrapper": "^1.0",
    "firebase/php-jwt": "^6.8",
    "monolog/monolog": "^3.4",
    "php-di/php-di": "^7.0",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.12",
    "slim/twig-view": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1"
  },
  "autoload": {
    "psr-4": {
      "HomeDocs\\": "homedocs"
    }
  },
  "scripts": {
    "start": "php -S 127.0.0.1:8081 -t public",
    "test": "vendor/bin/phpunit.bat --colors=always homedocs/Test/"
  }
}
